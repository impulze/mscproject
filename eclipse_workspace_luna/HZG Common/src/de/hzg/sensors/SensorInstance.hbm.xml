<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.hzg.sensors.SensorInstance" table="sensor_instances">
		<id name="id" column="id">
			<generator class="native" />
		</id>

		<property name="address">
			<column name="address" not-null="true" />
		</property>

		<property name="parameter1" column="parameter1" not-null="true" />
		<property name="parameter2" column="parameter2" not-null="true" />
		<property name="parameter3" column="parameter3" not-null="true" />
		<property name="parameter4" column="parameter4" not-null="true" />
		<property name="parameter5" column="parameter5" not-null="true" />
		<property name="parameter6" column="parameter6" not-null="true" />

		<many-to-one name="description" class="de.hzg.sensors.SensorDescription">
			<column name="sensor_description_id" />
		</many-to-one>
	</class>
</hibernate-mapping>