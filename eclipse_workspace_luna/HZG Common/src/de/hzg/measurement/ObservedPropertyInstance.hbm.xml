<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="de.hzg.measurement.ObservedPropertyInstance" table="observed_property_instances">
		<id name="id" column="id">
			<generator class="native">
				<param name="sequence">observed_property_instances_id_seq</param>
			</generator>
		</id>

		<property name="name">
			<column name="name" not-null="true" />
		</property>

		<property name="address">
			<column name="address" not-null="true" />
		</property>

		<many-to-one name="sensor" class="de.hzg.measurement.Sensor" update="false" insert="false">
			<column name="sensor_id" not-null="true" />
		</many-to-one>

		<many-to-one name="observedPropertyDescription" class="de.hzg.measurement.ObservedPropertyDescription" update="false" insert="false">
			<column name="observed_property_description_id" not-null="true" />
		</many-to-one>

		<many-to-one name="activeCalibrationSet" class="de.hzg.measurement.CalibrationSet" unique="true" cascade="all"><!-- update="false" insert="false">-->
			<!-- TODO: Sadly hibernate doesn't allow insertion of two entities that
			     reference each other via NOT NULL constraint.
			-->
			<column name="active_calibration_set_id" />
		</many-to-one>

		<bag name="calibrationSets" table="calibration_sets">
			<key column="observed_property_instance_id" not-null="true" />
			<one-to-many class="de.hzg.measurement.CalibrationSet" />
		</bag>

		<property name="isRaw">
			<column name="is_raw" not-null="true" />
		</property>

		<property name="useInterval">
			<column name="use_interval" not-null="true" />
		</property>
	</class>
</hibernate-mapping>
